        fprint(header(txt))
        fprint("Configured Connection:", "MQTT on {}:{} topic:{}".format(gglobs.RMServerIP, gglobs.RMServerPort, gglobs.RMServerFolder))
        fprint(gradmon.getRadMonInfo(extended=extended))

        self.setNormalCursor()


